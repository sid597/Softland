(e/defn get-icon [icon-name]
  (e/client
    (let [{:keys [width height fill d]} (get all-icons icon-name)]
      (println "keys " icon-name width height fill d)
      (svg/svg
        (dom/props
          {:width width
           :height height
           :viewBox "0 0 15 15"
           :fill "none"})
